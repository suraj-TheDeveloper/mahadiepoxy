<%- include('template.ejs') -%>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="rounded-3 p-5 mt-5 mb-5" style="background-color:#F3F3F3;">
                <h1 class="text-center"></h1>
                <form action="/addservice", method="post">
                    <div class="mb-3 mt-3">
                        <label class="form-label">Product Name</label>
                        <input type="text" class="form-control" name="pname" id="pname" placeholder="Enter Product name...">
                    </div>
                    <div class="mb-3 mt-3">
                        <label class="form-label">Product Price</label>
                        <input type="text" class="form-control" name="price" id="price" placeholder="Enter Product price...">
                    </div>
                    <div class="mb-3 mt-3">
                        <label class="form-label">Unit</label>
                        <select id="unit" name="unit" class="form-control">
                            <option>Select Option</option>
                            <option value="nos">Nos</option>
                        </select>
                    </div>
                    <div class="mb-3 mt-3">
                        <label class="form-label">Stock</label>
                        <input type="number" class="form-control" name="stock" id="stock" placeholder="Enter Product stock...">
                    </div>
                    <div class="mb-3 mt-3">
                        <label class="form-label">GST</label>
                        <select id="gst" name="gst" class="form-control">
                            <option>Select Option</option>
                            <option value="18">18</option>
                        </select>
                    </div>
                    <button class="btn btn-info">Create</button>
                </form>
            </div>
        </div>  
    </div>
</div>
</body>
</html>