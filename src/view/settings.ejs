<%- include('template.ejs') -%>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="rounded-3 p-5 mt-5 mb-5" style="background-color:#F3F3F3;">
                <h1 class="text-center"></h1>
                <form action="/settingsupdate" method="post">
                    <div class="mb-3 mt-3">
                        <label class="form-label">Company Name</label>
                        <input type="text" class="form-control" name="companyname" id="companyname" value="<%= data.clientName %>" placeholder="Enter Company name...">
                        <input type="hidden" class="form-control" name="id" id="id" value="<%= data._id %>">
                    </div>
                    <div class="mb-3 mt-3">
                        <label class="form-label">Address</label>
                        <textarea class="form-control" name="address" id="address" placeholder="Enter Address..." rows="5"><%= data.address %></textarea>
                    </div>
                    <div class="mb-3 mt-3">
                        <label class="form-label">Phone</label>
                        <input type="number" class="form-control" name="phone" id="phone" value="<%= data.phone %>" placeholder="Enter Phone number...">
                    </div>
                    <div class="mb-3 mt-3">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control" name="email" id="email" value="<%= data.email %>" placeholder="Enter Email...">
                    </div>
                    <div class="mb-3 mt-3">
                        <label class="form-label">GSTIN</label>
                        <input type="text" class="form-control" name="gst" id="gst" value="<%= data.gstin %>" placeholder="Enter Gst number...">
                    </div>
                    <div class="mb-3 mt-3">
                        <label class="form-label">State GST Code</label>
                        <input type="text" class="form-control" name="gstcode" id="gstcode" value="<%= data.stateGstCode %>" placeholder="Enter state Gst code...">
                    </div>
                    <div class="mb-3 mt-3">
                        <label class="form-label">Central GST</label>
                        <input type="text" class="form-control" name="cgst" id="cgst" value="<%= data.cgst %>" placeholder="Enter state Gst code...">
                    </div>
                    <div class="mb-3 mt-3">
                        <label class="form-label">State GST</label>
                        <input type="text" class="form-control" name="sgst" id="sgst" value="<%= data.sgst %>" placeholder="Enter state Gst code...">
                    </div>
                    <div class="mb-3 mt-3">
                        <label class="form-label">IGST</label>
                        <input type="text" class="form-control" name="isgt" id="isgt" value="<%= data.igst %>" placeholder="Enter state Gst code...">
                    </div>
                    <button class="btn btn-info">Save</button>
                </form>
            </div>
        </div>  
    </div>
</div>
</body>
</html>